		<script>
			let element=document.querySelector("#email");
					element.onfocus=function()
					{	
						this.onblur=()=>{ emailError();}
					}
					element.oninput=function(e)
					{
						emailError();
						document.querySelector(".err-msg").value="";
					} 

					element=document.querySelector("#password");
					element.onfocus=function()
					{	
						this.onblur=()=>{ passwordError();}
					}
					element.oninput=function(e)
					{
						passwordError();
						document.querySelector(".err-msg").value="";
					} 
				 

					
					document.querySelector("#signupForm").onsubmit=()=>
					{
					
						let error=false;	
						if(emailError())
						error=true;	
						else if(passwordError())
						error=true;				
					
						if(error)
						{
						
						return false;
						}
						return true;

						
					}
					
					function passwordError()
					{
						let pass=document.querySelector("#password");
						if(pass.value==null||pass.value==""||pass.value.length<5)
						{
							pass.parentElement.querySelector(".error").style.visibility="visible";
							return true;

						}
						else
						{
								pass.parentElement.querySelector(".error").style.visibility="hidden";
							return false;
						}
						
					}
					function emailError()
					{
						let email=document.querySelector("#email");
						if(validateEmail(email.value))
						{
							email.parentElement.querySelector(".error").style.visibility="hidden";
							return false;
						}
						else
						{
							
							email.parentElement.querySelector(".error").style.visibility="visible";
							return true;
						}
					}
		</script>
